<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.zulwi.tiebasigner"
    android:versionCode="1"
    android:versionName="1.0.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/BlueActionBarTheme" >
        <activity
            android:name="com.zulwi.tiebasigner.activity.SplashActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.zulwi.tiebasigner.activity.LoginActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.zulwi.tiebasigner.activity.EditSitesActivity"
            android:label="@string/title_activity_edit_sites"
            android:launchMode="singleTop" >
        </activity>
        <activity
            android:name="com.zulwi.tiebasigner.activity.MainActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="com.zulwi.tiebasigner.activity.AboutActivity"
            android:label="@string/about" >
        </activity>
        <activity
            android:name="com.zulwi.tiebasigner.activity.EditAccountActivity"
            android:label="@string/edit_account" >
        </activity>
    </application>

</manifest>